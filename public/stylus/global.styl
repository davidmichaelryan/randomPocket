$sans-serif = 'Open Sans', sans-serif
$pocket-red = #d3505a
$pocket-red-light = #ee5f64

gradient()
  background-color: $pocket-red
  background-image: -moz-linear-gradient(top, $pocket-red-light 0,$pocket-red 100%);
  background-image: -webkit-gradient(left top,left bottom,color-stop(0, $pocket-red-light),color-stop(100%,$pocket-red));
  background-image: -webkit-linear-gradient(top, $pocket-red-light 0,$pocket-red 100%);
  background-image: -o-linear-gradient(top, $pocket-red-light 0,$pocket-red 100%);
  background-image: -ms-linear-gradient(top, $pocket-red-light 0,$pocket-red 100%);
  background-image: linear-gradient(to bottom, $pocket-red-light 0,$pocket-red 100%);


body 
  color: black
  font: 112.5% $sans-serif

h1
  font-size: 4em
  line-height: 1
  margin: 10px auto 20px auto
  @media (min-width: 480px)
    font-size: 6em

  &.title_header
    &.counter
      &::after
        gradient()
        border-radius: 10px
        color: rgba(255,255,255,1)
        content: attr(data-num)
        display: inline-block
        font-size: 0.25em
        height: 27px
        min-width:37px
        padding: 5px 5px
        vertical-align: top
    &.hide
      &::after
        color: rgba(255,255,255,0)
        transition: all 100ms linear
            

h2
  font-size: 2em
  margin: 5px auto 10px auto
  @media (min-width: 480px)
    font-size: 4em

h3
  font-size: 1em
  margin: 5px auto 10px auto
  @media (min-width: 480px)
    font-size: 2em

h1,h2,h3
  text-align: center  

.container
  max-width: 800px
  margin: 0 auto
  text-align: center
  width: 90%
  
  
  


button
  gradient()

  border: none
  border-radius: 4px 
  box-shadow: inset 0 1px 1px rgba(255,255,255,.4)
  color: white
  cursor: pointer
  display: block
  font-size: 24px  
  height: 40px
  margin: 0 auto
  width: 120px





